<div class="modal fade text-left" id="createWorkFlowStageModal" tabindex="-1" role="dialog" aria-labelledby="createWorkFlowStageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">@L("WorkFlow.Create")</h6>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="ft-x font-medium-2 text-bold-700"></i></span>
                </button>
            </div>
            <form name="createWorkFlowStageForm" role="form" class="form-horizontal">
                <input hidden name="workFlowId" />
                <input hidden name="parentId" />
                <input hidden name="levelStatus" />
                <div class="modal-body">
                    <fieldset class="form-group floating-label-form-group">
                        <label for="name">@L("Name")</label>
                        <input type="text" class="form-control" name="name" id="name" placeholder="@L("Name")" required minlength="2">
                    </fieldset>
                    <br>
                    <fieldset class="form-group floating-label-form-group">
                        <label for="userRoles">@L("UserRoles")</label>
                        <div class="form-group">
                            <select class="form-control" name="RoleId" id="userRoles" asp-items="@(ViewData["UserRoles"] as SelectList)" required>
                                <option selected disabled value="">@L("Select")</option>
                            </select>
                        </div>
                    </fieldset>
                    <fieldset class="form-group floating-label-form-group users">
                        <label for="UserId">@L("Users")</label>
                        <div class="form-group">
                            <select class="form-control" name="UserId" id="UserId">
                            </select>
                        </div>
                    </fieldset>
                    <fieldset class="form-group floating-label-form-group">
                        <div class="col-md-9">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" name="HasMediaFiles" id="_hasMediaFiles" />
                                <label class="custom-control-label" for="_hasMediaFiles">@L("MediaFile.HasMediaFiles")</label>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="form-group floating-label-form-group">
                        <div class="col-md-9">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" name="IsArchived" id="_isArchived" />
                                <label class="custom-control-label" for="_isArchived">@L("WorkFlow.IsArchive")</label>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="form-group floating-label-form-group">
                        <div class="col-md-9">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" name="HasAcceptNextStep" id="_hasAcceptNextStep" />
                                <label class="custom-control-label" for="_hasAcceptNextStep">@L("WorkFlow.HasAcceptNextStep")</label>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="form-group floating-label-form-group">
                        <div class="col-md-9">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" name="HasRejectNextStep" id="_hasRejectNextStep" />
                                <label class="custom-control-label" for="_hasRejectNextStep">@L("WorkFlow.HasRejectNextStep")</label>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="form-group floating-label-form-group">
                        <label for="description">@L("Description")</label>
                        <textarea type="text" class="form-control" name="description" id="description" placeholder="@L("Description")"></textarea>
                    </fieldset>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn bg-light-success" onclick="createStage()">@L("Create")</button>
                    <button type="reset" class="btn bg-light-secondary" data-dismiss="modal">@L("Cancel")</button>
                </div>
            </form>
        </div>
    </div>
</div>