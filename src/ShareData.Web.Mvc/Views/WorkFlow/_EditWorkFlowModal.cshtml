@using ShareData.WorkFlowManagemet;
@model WorkFlow
<div class="modal-header">
    <h3 class="modal-title" id="myModalLabel34">@L("WorkFlow.Edit")</h3>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true"><i class="ft-x font-medium-2 text-bold-700"></i></span>
    </button>
</div>
<form name="editWorkFlowForm" role="form" class="form-horizontal">
    <div class="modal-body">
        <input hidden name="id" asp-for="Id">
        <fieldset class="form-group floating-label-form-group">
            <label for="name">@L("Name")</label>
            <input type="text" class="form-control" asp-for="Name" id="name" name="name" placeholder="@L("Name")" required>
        </fieldset>
        <fieldset class="form-group floating-label-form-group">
            <label for="description">@L("Description")</label>
            <textarea class="form-control" id="description" asp-for="Description" name="description" rows="3" placeholder="@L("Description")"></textarea>
        </fieldset>
    </div>
    <div class="modal-footer">
        <button type="reset" class="btn bg-light-secondary" data-dismiss="modal">@L("Cancel")</button>
        <button type="button" class="btn btn-success" onclick="updateWorkFlow()">@L("Save")</button>
    </div>
</form>
