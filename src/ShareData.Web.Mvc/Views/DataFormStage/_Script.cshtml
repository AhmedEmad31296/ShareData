    function takeFormStageNextAction(id, type) {
        $.ajax({
            type: 'GET',
            url: "@Url.Action("GetNextWorkFlowStageDetailsForDataForm")",
            data: { id: id, stageType: type },
            success: function (data) {
                $('#SendNoteFormModal .modal-content').html(data);
                $('#SendNoteFormModal').modal('show');
                $('[name="FormId"]').val(id);
            },
            error: function (res) {
                toastr.error(res.responseJSON.error.message, '@L("Error")');
            }
        });
    }


    function sendFormNote() {
        var _$form = $('form[name="SendNoteForm"]');
        abp.ui.setBusy(_$form);

        // Using FormData to handle file uploads
        var formData = new FormData(_$form[0]);
        $.ajax({
            type: "POST",
            url: "@Url.Action("InsertNewFormStage")",
            contentType: false, // Set to false for FormData
            processData: false, // Set to false for FormData
            data: formData,
            success: function (res) {
                abp.ui.clearBusy(_$form);
                toastr.success(res.result, '@L("Success")');
                $('#SendNoteFormModal').modal('hide');
                setTimeout(function () {
                    location.reload();
                }, 1000);
            },
            error: function (res) {
                toastr.error(res.responseJSON.error.message, '@L("Error")');
            }
        });
    }


